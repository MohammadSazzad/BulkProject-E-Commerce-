@model Category

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-dark text-white p-3 rounded-top-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill fs-4 me-2 text-warning"></i>
                        <h2 class="mb-0 fw-semibold">Delete Category</h2>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-light border border-warning mb-4" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-info-circle-fill fs-5 me-2 text-warning"></i>
                            <span class="fw-semibold text-dark">Are you sure you want to delete this category? This action cannot be undone.</span>
                        </div>
                    </div>
                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold text-dark mb-2">
                                <i class="bi bi-tag-fill me-2 text-secondary"></i>Category Name
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg border-1  rounded-3 text-muted" readonly />
                        </div>
                        <div class="mb-3">
                            <label asp-for="DisplayOrder" class="form-label fw-semibold text-dark mb-2">
                                <i class="bi bi-sort-numeric-down me-2 text-secondary"></i>Display Order
                            </label>
                            <input asp-for="DisplayOrder" class="form-control form-control-lg border-1 rounded-3 text-muted" readonly />
                        </div>
                        <div class="d-flex gap-2 justify-content-end">
                            <a class="btn btn-outline-secondary px-3 py-2 d-flex align-items-center gap-2" asp-controller="Category" asp-action="Index">
                                <i class="bi bi-arrow-left-circle"></i> <span>Back to List</span>
                            </a>
                            <button type="submit" class="btn btn-outline-danger px-3 py-2 d-flex align-items-center gap-2">
                                <i class="bi bi-trash3-fill"></i> <span>Delete</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
