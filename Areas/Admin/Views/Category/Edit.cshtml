@model Category

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-dark text-white p-3 rounded-top-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-pencil-square fs-4 me-2 text-info"></i>
                        <h2 class="mb-0 fw-semibold">Edit Category</h2>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold text-dark mb-2">
                                <i class="bi bi-tag-fill me-2 text-info"></i>Category Name
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg border-0 shadow rounded-3" placeholder="Enter category name..." />
                            <span asp-validation-for="Name" class="text-danger fs-6 mt-1 d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DisplayOrder" class="form-label fw-semibold text-dark mb-2">
                                <i class="bi bi-sort-numeric-down me-2 text-info"></i>Display Order
                            </label>
                            <input asp-for="DisplayOrder" class="form-control form-control-lg border-0 shadow rounded-3 " placeholder="Enter display order..." />
                            <span asp-validation-for="DisplayOrder" class="text-danger fs-6 mt-1 d-block"></span>
                        </div>
                        <div class="d-flex gap-2 justify-content-end">
                            <a class="btn btn-outline-secondary px-3 py-2 d-flex align-items-center gap-2" asp-controller="Category" asp-action="Index">
                                <i class="bi bi-arrow-left-circle"></i> <span>Back to List</span>
                            </a>
                            <button type="submit" class="btn btn-info px-3 py-2 d-flex align-items-center gap-2 text-white">
                                <i class="bi bi-check-circle-fill"></i> <span>Update</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name = "_ValidationScriptsPartial" />
    }
}
