@model Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container-fluid py-5 min-vh-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 rounded-4 border-danger">
                    <div class="card-header bg-gradient bg-danger text-white p-4 rounded-top-4">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill fs-3 me-3"></i>
                            <h3 class="mb-0 fw-bold">Delete Product</h3>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
                            <div>
                                <strong>Warning!</strong> You are about to permanently delete this product. This action cannot be undone.
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="card bg-light border-0 mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title text-primary">
                                            <i class="bi bi-journal-text me-2"></i>@Model.Title
                                        </h5>
                                        <p class="card-text"><strong>Author:</strong> @Model.Author</p>
                                        <p class="card-text"><strong>ISBN:</strong> <span class="badge bg-info text-dark">@Model.ISBN</span></p>
                                        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                                        <div class="row">
                                            <div class="col-md-3">
                                                <p class="card-text"><strong>List Price:</strong> <span class="text-muted">$@Model.ListPrice.ToString("F2")</span></p>
                                            </div>
                                            <div class="col-md-3">
                                                <p class="card-text"><strong>Price:</strong> <span class="text-success fw-bold">$@Model.Price.ToString("F2")</span></p>
                                            </div>
                                            <div class="col-md-3">
                                                <p class="card-text"><strong>Price (50+):</strong> <span class="text-warning">$@Model.Price50.ToString("F2")</span></p>
                                            </div>
                                            <div class="col-md-3">
                                                <p class="card-text"><strong>Price (100+):</strong> <span class="text-info">$@Model.Price100.ToString("F2")</span></p>
                                            </div>
                                        </div>
                                        <p class="card-text"><strong>Category:</strong> 
                                            <span class="badge bg-secondary">@(Model.Category?.Name ?? "No Category")</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <form asp-action="Delete" method="post">
                            <input asp-for="Id" type="hidden" />
                            <div class="d-flex gap-3 mt-4">
                                <button type="submit" class="btn btn-danger btn-lg px-4">
                                    <i class="bi bi-trash me-2"></i>Yes, Delete Product
                                </button>
                                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary btn-lg px-4">
                                    <i class="bi bi-arrow-left me-2"></i>Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
